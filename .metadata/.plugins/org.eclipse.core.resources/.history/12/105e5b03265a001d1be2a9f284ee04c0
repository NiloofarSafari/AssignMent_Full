package october29;

public class Nested_for_loop_pattern {

	public static void main(String[] args) {
	
		//Nested for loop- for each execution of outer for loop, inner for loop
		//executes completely 
		//Pattern programming
		pattern1();
		pattern2();
		pattern3(5);
		pattern4(5);
		pattern5();
		
		

	} static void pattern1() {
		 
		for (int row=1 ; row<=5 ; row++) {
			for (int col=1 ; col<=5 ; col++) {
				System.out.print("* ");
			
			}System.out.println();
		}System.out.println("-----------------------");
	}

	static void pattern2() {
		for (int row=1 ; row<=5 ; row++) {
			for (int col=1 ; col<=row ; col++ ) {
				System.out.print("* ");
			}System.out.println();
		}
		System.out.println("----------------------");
	}
	 static void  pattern3(int n) {
		 for (int row=1 ; row<=5 ; row++) {
			 for (int col=1; col<=n-row+1 ; col++) {
				 System.out.print("* ");
			 }System.out.println();
		 }
		System.out.println("----------------------");
		
	}
	 static void pattern4(int n) {
		 for (int row=1 ; row<=5 ; row++ ) {
			 for (int col=1 ; col<=row ; col++) {
				 System.out.print(col + " ");
			 }System.out.println();
		 }  System.out.println("---------------------");
	 }
	 //in homework bood khodam neveshtam ke dorost ham nist
	/* static void pattern5() {
		 for (int col=1 ; col<=5 ; col++) {   
			 for (int  row= 1 ; row<=5-col+1 ; row++) {
				 System.out.print("* ");
			 } System.out.println();
		 }
	 }*/
}
